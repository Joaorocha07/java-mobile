<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E8F7FF"
    tools:context=".ui.home.HomeFragment">

        <ImageView
            android:id="@+id/imageasd"
            android:layout_width="match_parent"
            android:layout_height="730dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fundo"
            tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4AFFE8C7"
        android:hapticFeedbackEnabled="false"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-78dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="44dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="145dp"
                    android:layout_height="101dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cadastro" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="22dp" />

                <EditText
                    android:id="@+id/editTextNome"
                    android:layout_width="262dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:background="#E8F7FF"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="@string/txt_hint_edit_nome"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#323131" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/editTextSobrenome"
                    android:layout_width="262dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:background="#E8F7FF"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="@string/txt_hint_edit_sobrenome"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#323131" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="262dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:background="#E8F7FF"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="@string/txt_hint_edit_email"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#323131" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/editTextSenha"
                    android:layout_width="262dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:background="#E8F7FF"
                    android:elevation="4dp"
                    android:hint="@string/txt_hint_edit_senha"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:shadowRadius="10"
                    android:textColorHint="#323131" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="22dp" />

                <EditText
                    android:id="@+id/editTextConfirmeSuaSenha"
                    android:layout_width="262dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:width="5dp"
                    android:background="#E8F7FF"
                    android:elevation="4dp"
                    android:ems="10"
                    android:hint="@string/txt_hint_edit_confirme_sua_senha"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:radius="100dp"
                    android:textColorHint="#323131" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="33dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="141dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:width="5dp"
                    android:backgroundTint="#E8F7FF"
                    android:elevation="4dp"
                    android:hapticFeedbackEnabled="false"
                    android:hint="@string/txt_hint_edit_cadastrar"
                    android:radius="10dp"
                    android:textColorHint="#000000"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#3A3838"
                android:textSize="20sp"
                android:textStyle="bold"
                app:autoSizeTextType="uniform" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>